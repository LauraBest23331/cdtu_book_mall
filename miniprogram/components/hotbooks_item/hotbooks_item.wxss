.books_item {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
}
.books_item .num {
  color: #de7d2c;
  font-size: 40rpx;
  font-family: PingFangSC-bold;
  height: 200rpx;
  width: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.books_item .bookmsg_con {
  width: 580rpx;
  height: 200rpx;
  display: flex;
  border-radius: 20rpx 20rpx 20rpx 20rpx;
  text-align: center;
  box-shadow: 0px 2rpx 8rpx 0px rgba(0, 0, 0, 0.4);
  border: 2rpx solid #ffffff;
}
.books_item .bookmsg_con .img {
  width: 200rpx;
  height: 200rpx;
}
.books_item .bookmsg_con .bookmsg .bookname {
  color: #505559;
  font-size: 28rpx;
  text-align: left;
  font-family: PingFangSC-regular;
  margin-top: 10rpx;
  margin-left: 17rpx;
}
.books_item .bookmsg_con .bookmsg .bookediter {
  color: #505559;
  font-size: 28rpx;
  text-align: left;
  font-family: PingFangSC-regular;
  margin-top: 20rpx;
  margin-left: 17rpx;
}
.books_item .bookmsg_con .bookmsg .send {
  color: #505559;
  font-size: 28rpx;
  text-align: left;
  font-family: PingFangSC-regular;
  margin-top: 40rpx;
  margin-left: 17rpx;
}
