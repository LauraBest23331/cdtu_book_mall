/* pages/mypage/mypage.wxss */
@import "../../iconfont.wxss";
/* 个人信息 */
.my {
  width: 100%;
  height: 260rpx;
  background-color: #A7DAA9;
  border-radius: 0 0 130rpx 130rpx;
}
.my_header {
  float:left;
  margin: 60rpx 0 0 48rpx;
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  background-color: pink;
  overflow: hidden;
}
.my_header image {
  width: 100%;
  height: 100%;
}
.my_name {
  float: left;
  margin: 80rpx 0 0 20rpx;
  font-size: 40rpx;
  color: #fff;
}
/* 个人栏目 */
.self {
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  height: 232rpx;
  font-family: 'iconfont';
  border-radius: 0rpx 0rpx 54rpx 54rpx;
  box-shadow: 0px 2px 6px 0px rgba(0, 0, 0, 0.12);
}

.self li view:nth-child(1) {
  font-size: 78rpx;
  color: #DE7D2C;
}
.self li view:nth-child(2) {
  font-size: 28rpx;
  color: #505559;
  margin-left: -15rpx;
}
/* 其他功能 */
.func {
  display: flex;
  flex-direction: column;
  width: 90%;
  height: 480rpx;
  margin: auto;
}
.func li {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex: 1;
  width: 100%;
  font-family: 'iconfont';
  border-bottom:1px solid #E1E3E6
}
.func li text:nth-child(1) {
  font-size: 36rpx;
  color: #505559;
}
.func li text:nth-child(2) {
  font-size: 50rpx;
}