<!--pages/goods-descript/goods-descript.wxml-->
<!-- 商品信息2 -->
<view class="info1">
<text class="icon-zuobian" style="color:black; font-size:60rpx;" bindtap="return"></text>
<view class="information">商品信息</view>
</view>
<view class="base">基本信息
  <view class="book-name">书名
    <p class="book-name1">{{bookName}}</p>
  </view>
  <view class="book-name">作者
    <p class="book-name1">{{author}}</p>
  </view>
  <view class="book-name">出版社
    <p class="book-name1">{{publisher}}</p>
  </view>
  <view class="book-name">ISBN
    <p class="book-name1">{{ISBN}}</p>
  </view>
  <view class="book-name">品相
    <text class="select">必选</text>
    <text class="icon-youbian"></text>
  </view>
  <view class="book-name">图书类型
    <text class="select">必选</text>
    <text class="icon-youbian"></text>
  </view>
  <view class="book-name">商品位置
    <text class="select">必选</text>
    <text class="icon-youbian"></text>
  </view>
</view>
<view class="add-photo">添加照片
  <view class="photo">
    <image src="{{photo}}" >
      <span class="cover">封面</span>
    </image>
  </view>
  <view class="plus-sign">
    <span class="icon-tianjia1"></span>
  </view>
</view>

<view class="items-descript">商品描述 
  <textarea name="" id="" wrap="hard" cols="18" rows="5" maxlength="100" class="input-descript"></textarea>
</view>
<view class="get-price" bindtap="get_prices">出价</view>
  
