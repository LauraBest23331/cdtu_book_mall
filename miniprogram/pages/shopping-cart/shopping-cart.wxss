/* pages/shopping-cart/shopping-cart.wxss */
@import "../../iconfont.wxss";
.sub {
  position: relative;
  width: 750rpx;
  height: 140rpx;
  line-height: 154rpx;
  background-color: rgba(60, 179, 113, 100);
  color: rgba(255, 255, 255, 100);
  font-size: 50rpx;
  text-align: left;
  font-family: Arial;
}
.shopping-cart {
  margin-left: 30rpx;
}
.num {
  position: absolute;
  top: 50rpx;
  left: 32rpx;
  font-size: 28rpx;
  color: rgba(194, 199, 204, 100);

}
.cart1 {
  height: 460rpx;
  width: 90%;
  margin: 40rpx auto 0;
  background-color: #fff;
  border-radius: 32rpx;
  overflow: hidden;
  border: 2px solid #ccc;
}
.order_self {
  position: relative;
  height: 120rpx;
  box-shadow: 0rpx 4rpx 12rpx 0rpx rgba(0, 0, 0, 0.4);
  overflow: hidden;
}
.head {
  position: absolute;
  top: 12rpx;
  left: 36rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.head image {
  width: 100%;
  height: 100%;
}
.uname {
  margin: 20rpx 0 10rpx 140rpx;
  font-size: 32rpx;
  color: #505559;
}
.just {
  margin-left: 140rpx;
  font-size: 28rpx;
  color: #C2C7CC;
}
.icon-approve {
  font-family: 'iconfont';
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  color: #1C9E56;
  font-size: 28rpx;
}

.content {
  float: left;
  position: relative;
  width: 100%;
  height: 348rpx;
}
.icon-dui {
  position: absolute;
  top:100rpx;
  left: 30rpx;
  font-family: 'iconfont';
  color: #1C9E56;
  font-size:50rpx;
  width: 46rpx;
  height: 46rpx;
}
.photo {
  margin-left: 100rpx;
  margin-top: 40rpx;
  width: 260rpx;
  height: 260rpx;
}
.photo image {
  width: 100%;
  height: 100%;
}
.right-content {
  position: absolute;
  right: 17rpx;
  top: 20rpx;
  width: 290rpx;
  height: 100%;
}
.goods-name{
padding-left: 30rpx;
}
/* 售出理由 */
.goods-description{
  width: 100%;
  
  font-size: 24rpx;
  color: rgba(194, 199, 204, 100);
}
/* tag图标和位置图标 */
.icon-tag2,
.icon-location {
  font-size: 30rpx;
  font-family: 'iconfont';
  margin: 10rpx 0 0 20rpx;
}
.icon-tag2::before,
.icon-location::before {
  margin-right: 10rpx;
}
.price {
  width: 100%;
  height: 50rpx;
}
.now-price {
  height: 100%;
  width: 100rpx;
  margin-top: 15rpx;
  color: rgba(222, 125, 44, 100);
  font-size: 36rpx;
  text-align: left;
  font-family: PingFangSC-regular;
}
.before-price {
  font-size: 24rpx;
  margin-left: 15rpx;
  text-decoration:line-through;
}
.want-buy {
  margin-left: 15rpx;
  color: rgba(194, 199, 204, 100);
  font-size: 24rpx;
  text-align: left;
  font-family: PingFangSC-regular;
} 
.bottom {
  position: relative;
  top: 627rpx;
  left: 0;
  width: 100%;
  height: 110rpx;
}
.all-select {
  width: 150rpx;
  height: 110rpx;
  margin: 0 0 0 120rpx;
  margin-top: 20rpx;
  font-size: 36rpx;
}
.heji {
  width: 190rpx;
  margin-left: 60rpx;
  font-size: 36rpx;
}
.heji text {
  font-size: 40rpx;
  text-align: center;
  color: rgba(222, 125, 44, 100);
  font-family: PingFangSC-regular;
}
.jiesuan {
  position: absolute;
  top: -25rpx;
  right: 0; 
  width: 240rpx;
  height: 110rpx;
  line-height: 110rpx;
  font-size: 40rpx;
  text-align: center;
  border-radius: 16px;
  font-family: Microsoft Yahei;
  color: rgba(255, 255, 255, 100);
  background-color: rgba(28, 158, 86, 100);
  box-shadow: 0 4rpx 12rpx 0 rgba(0, 0, 0, 0.4);
  border: 2rpx solid rgba(255, 255, 255, 100);
}